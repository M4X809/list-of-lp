{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"formatter": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "warn",
				"noParameterAssign": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useMediaCaption": "off",
				"noSvgWithoutTitle": "off"
			}
		},
		"includes": [
			"**",
			"!**/node_modules/**/*",
			"!**/biome.json",
			"!**/build/**/*",
			"!**/.next/**/*",
			"!**/drizzle/**/*",
			"!**/*dockerignore*",
			"!**/*.css",
			"!**/*.log"
		]
	}
}
